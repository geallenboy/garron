{
  "name": "garron",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "git add . && git-cz",
    "init": "lerna bootstrap",
    "lint:eslint": "eslint --fix \"*/{rchart,rhooks,rule,utils,rcomponent}/**/*.{tsx,ts}\"",
    "lint:lint-staged": "lint-staged",
    "lint:prettier": "prettier --write  \"*/{rchart,vchart,rhooks,rule,utils,rcomponent}/**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "uninit": "lerna clean && rimraf node_modules"
  },
  "lint-staged": {
    "packages/{rchart,rhooks,rule,utils,rcomponent}/**/*.{tsx,ts}": [
      "eslint --cache --fix ."
    ],
    "packages/{rchart,rhooks,rule,utils,rcomponent}/**/*.{tsx,ts,md}": [
      "prettier -w ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/cz-commitlint": "^17.1.2",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "commitizen": "^4.2.5",
    "commitlint-config-cz": "^0.13.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lerna": "^5.4.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": "^12 || >=14"
  },
  "npmClient": "yarn"
}
